<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorWhite</item>-->
<!--        <item name="colorPrimaryDark">@color/colorMain</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="toolbarStyle">@style/ToolbarStyle.Dark</item> <!--Toolbar 스타일-->


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorMain</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--editText 공간 속성-->
        <item name="colorControlActivated">@color/colorMain</item> <!--포커스 상태의 밑줄 색-->
        <item name="colorControlNormal">@color/colorGray</item> <!--선택되지 않은 상태의 밑줄 색-->
        <item name="android:textSelectHandle">@color/colorMain</item> <!--손잡이 부분 색상-->
        <item name="android:textColorHighlight">@color/colorMain</item> <!--텍스트 선택색 -->
        <item name="android:textCursorDrawable">@color/colorMain</item> <!--커서(Cursor)색 -->

        <item name="background">@color/colorWhite</item>

    </style>


    <!--Toolbar 스타일-->
    <style name="ToolbarStyle.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorBackground</item> <!-- Toolbar의 배경색-->
        <item name="titleTextAppearance">@style/ToolbarTitleStyle.Dark</item> <!-- Toolbar의 타이틀 텍스트-->
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleStyle.Dark</item> <!-- Toolbar의 서브타이틀 텍스트-->
    </style>

    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/colorBlack</item> <!-- Toolbar의 타이틀 텍스트 색상-->
    </style>

    <!-- Toolbar의 서브타이틀 텍스트-->
    <style name="ToolbarSubtitleStyle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/colorWhite</item> <!-- Toolbar의 서브타이틀 텍스트 색상-->
        <item name="android:textSize">12dp</item> <!-- Toolbar의 서브타이틀 텍스트 사이즈-->
    </style>




</resources>